@page "/"
@inject VlcService Vlc
@inject ISnackbar Snackbar
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<MudPaper Class="pa-4" Elevation="1">
    <MudText Typo="Typo.h5" Class="mb-3">IPTV Playlist Loader</MudText>
    <MudTextField @bind-Value="_playlistUrl" Label="M3U URL" Placeholder="https://.../playlist.m3u" Variant="Variant.Outlined" Class="mb-2" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Disabled="_loading || string.IsNullOrWhiteSpace(_playlistUrl)" OnClick="LoadPlaylistAsync">Load Playlist</MudButton>
    <div class="mt-4" style="min-height:220px;">
        @if (_loading)
        {
            <div style="display:flex;justify-content:center;align-items:center;min-height:180px;">
                <MudProgressCircular Indeterminate="true" Size="Size.Large" Color="Color.Primary" />
            </div>
        }
        else if (_channels.Any())
        {
            <MudDataGrid T="Channel"
                         Items="_channels"
                         QuickFilter="QuickFilterFunc"
                         SortMode="SortMode.None"
                         Dense="true"
                         RowsPerPage="25"
                         Class="mt-2"
                         Style="max-width:800px;margin:0 auto;">
                <ToolBarContent>
                    <MudTextField @bind-Value="_search"
                                  Placeholder="Search channels..."
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Search"
                                  Immediate="true"
                                  DebounceInterval="200" />
                </ToolBarContent>
                <Columns>
                    <TemplateColumn Title="Logo" Sortable="false" CellStyle="width: 50px;">
                        <CellTemplate>
                            @if (!string.IsNullOrWhiteSpace(context.Item.Logo))
                            {
                                <MudAvatar Size="Size.Small">
                                    <MudImage Src="@context.Item.Logo" Alt="@context.Item.Title" />
                                </MudAvatar>
                            }
                            else
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Tv" Size="Size.Small" />
                            }
                        </CellTemplate>
                    </TemplateColumn>
                    <PropertyColumn Property="@(x => x.Title)" Title="Channel" />
                    <PropertyColumn Property="@(x => x.GroupTitle)" Title="Group" />
                    <TemplateColumn Title="Play" CellStyle="width: 100px;">
                        <CellTemplate>
                            <MudButton Size="Size.Small"
                                       Variant="Variant.Filled"
                                       Color="Color.Primary"
                                       StartIcon="@Icons.Material.Filled.Tv"
                                       OnClick="(() => PlayChannel(context.Item))">
                                Play
                            </MudButton>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
                <PagerContent>
                    <MudDataGridPager T="Channel" PageSizeOptions="new int[]{25}" />
                </PagerContent>
            </MudDataGrid>
        }
        else if (!_loading && !string.IsNullOrWhiteSpace(_playlistUrl))
        {
            <div style="max-width:800px;margin:0 auto;">
                <MudAlert Severity="Severity.Warning" Class="mt-2">No channels found in playlist</MudAlert>
            </div>
        }
    </div>

</MudPaper>

@code {
    private string _playlistUrl = string.Empty;
    private bool _loading = false;
    private string _search = string.Empty;
    private List<Channel> _channels = new();

    // Moved storage access to OnAfterRenderAsync because JS interop is not available during prerender.
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        var saved = await LocalStorage.GetItemAsync<string>("andytv.vlc.playlistUrl");
        if (!string.IsNullOrWhiteSpace(saved))
        {
            _playlistUrl = saved;
            // Trigger load after initial render without intermediate StateHasChanged
            await LoadPlaylistAsync();
        }
    }

    private async Task LoadPlaylistAsync()
    {
        if (_loading)
            return; // guard against double-click / duplicate auto-load

        _loading = true;
        _channels.Clear();
        await InvokeAsync(StateHasChanged);
        try
        {
            if (!string.IsNullOrWhiteSpace(_playlistUrl))
                await LocalStorage.SetItemAsync("andytv.vlc.playlistUrl", _playlistUrl.Trim());

            var parsed = await M3UManager.ParseFromUrlAsync(_playlistUrl);
            _channels = parsed.Channels.ToList();
            Snackbar.Add($"Loaded {_channels.Count} channels", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add("Failed to load playlist: " + ex.Message, Severity.Error);
        }
        finally
        {
            _loading = false;
            await InvokeAsync(StateHasChanged); // ensure grid re-renders with data
        }
    }

    private bool QuickFilterFunc(Channel item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        return (item.Title?.Contains(_search, StringComparison.OrdinalIgnoreCase) == true) ||
               (item.GroupTitle?.Contains(_search, StringComparison.OrdinalIgnoreCase) == true);
    }

    private void PlayChannel(Channel c)
    {
        if (Vlc.Launch(c.MediaUrl))
            Snackbar.Add($"Launching VLC: {c.Title}", Severity.Info);
        else
            Snackbar.Add("Could not launch VLC (check path in appsettings).", Severity.Warning);
    }
}