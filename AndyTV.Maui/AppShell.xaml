<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AndyTV.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AndyTV.Maui.Views"
    Title="AndyTV"
    FlyoutBehavior="Disabled">

    <TabBar Shell.TabBarForegroundColor="{StaticResource Primary}">
        <ShellContent
            Title="Channels"
            ContentTemplate="{DataTemplate views:ChannelsPage}"
            Route="channels">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf26c;" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Route="favorites">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf004;" />
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="settings">
            <ShellContent.Icon>
                <FontImageSource FontFamily="FontAwesomeSolid" Glyph="&#xf013;" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>