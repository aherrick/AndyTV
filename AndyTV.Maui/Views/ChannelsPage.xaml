<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndyTV.Maui.Views.ChannelsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:AndyTV.Data.Models;assembly=AndyTV.Data"
    xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Channels"
    x:DataType="vm:ChannelsViewModel">

    <ContentPage.Resources>
        <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">

        <Entry
            Grid.Row="0"
            Margin="10"
            Placeholder="Search channels (min 2 chars)..."
            Text="{Binding SearchText}" />

        <RefreshView
            Grid.Row="1"
            Command="{Binding LoadChannelsCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView IsGrouped="True" ItemsSource="{Binding Channels}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate x:DataType="vm:ChannelGroup">
                        <Label
                            BackgroundColor="{AppThemeBinding Light=#F0F0F0,
                                                              Dark=#202020}"
                            FontAttributes="Bold"
                            FontSize="18"
                            Padding="15,10"
                            Text="{Binding Name}" />
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Channel">
                        <Grid Padding="15,10" ColumnDefinitions="Auto,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectChannelCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Image
                                Grid.Column="0"
                                Aspect="AspectFit"
                                HeightRequest="40"
                                IsVisible="{Binding LogoUrl, Converter={StaticResource IsStringNotNullOrEmptyConverter}}"
                                Margin="0,0,10,0"
                                Source="{Binding LogoUrl}"
                                WidthRequest="40" />

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label FontSize="16" Text="{Binding Name}" />
                                <Label
                                    FontSize="12"
                                    Text="{Binding Category}"
                                    TextColor="Gray" />
                            </VerticalStackLayout>

                            <ImageButton
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleFavoriteCommand}"
                                CommandParameter="{Binding .}"
                                HeightRequest="40"
                                WidthRequest="40">
                                <ImageButton.Source>
                                    <FontImageSource
                                        FontFamily="FontAwesomeRegular"
                                        Glyph="&#xf004;"
                                        Size="24"
                                        Color="Gray" />
                                </ImageButton.Source>
                            </ImageButton>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>