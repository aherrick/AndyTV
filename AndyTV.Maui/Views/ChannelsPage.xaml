<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
             xmlns:models="clr-namespace:AndyTV.Data.Models;assembly=AndyTV.Data"
             x:Class="AndyTV.Maui.Views.ChannelsPage"
             x:DataType="vm:ChannelsViewModel"
             Title="Channels">

    <Grid RowDefinitions="Auto,Auto,*">

        <HorizontalStackLayout Grid.Row="0" Padding="10" Spacing="10">
            <Button Text="Refresh" Command="{Binding LoadChannelsCommand}" />
            <Label Text="{Binding StatusMessage}" VerticalOptions="Center" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        </HorizontalStackLayout>

        <Entry Grid.Row="1"
               Text="{Binding SearchText}"
               Placeholder="Search channels (min 2 chars)..."
               Margin="10,0" />

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Channels}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Channel">
                    <Grid Padding="15,10">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ChannelsViewModel}}, Path=SelectChannelCommand}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding Category}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>