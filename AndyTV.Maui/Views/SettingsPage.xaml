<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndyTV.Maui.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:AndyTV.Data.Models;assembly=AndyTV.Data"
    xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
    Title="Settings"
    Shell.NavBarIsVisible="True"
    x:DataType="vm:SettingsViewModel">

    <Grid Padding="20" RowDefinitions="Auto,*">

        <!--  Add Playlist Form  -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">

            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Add Playlist" />

            <Entry Placeholder="Playlist Name" Text="{Binding PlaylistName}" />

            <Entry
                Keyboard="Url"
                Placeholder="https://example.com/playlist.m3u"
                Text="{Binding PlaylistUrl}" />

            <Button Command="{Binding AddCommand}" Text="Add Playlist" />

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <BoxView
                Margin="0,10"
                HeightRequest="1"
                Color="Gray" />

            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="My Playlists" />
        </VerticalStackLayout>

        <!--  Playlist List  -->
        <CollectionView
            Grid.Row="1"
            Margin="0,10,0,0"
            ItemsSource="{Binding Playlists}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Playlist">
                    <Grid Padding="10" ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{Binding Name}" />
                            <Label
                                FontSize="12"
                                LineBreakMode="TailTruncation"
                                Text="{Binding Url}"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                        <Button
                            Grid.Column="1"
                            BackgroundColor="Red"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SettingsViewModel}}, Path=DeleteCommand}"
                            CommandParameter="{Binding .}"
                            Text="Delete"
                            TextColor="White" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label
                    HorizontalOptions="Center"
                    Text="No playlists added yet"
                    TextColor="Gray" />
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>