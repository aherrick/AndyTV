<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndyTV.Maui.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:AndyTV.Maui.Controls"
    xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
    Title="{Binding ChannelName}"
    x:DataType="vm:PlayerViewModel"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">

    <Grid BackgroundColor="Black">
        <Grid.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Right" Command="{Binding GoBackCommand}" />
        </Grid.GestureRecognizers>

        <controls:NativeVideoPlayer
            x:Name="VideoPlayer"
            Source="{Binding Url}"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />
    </Grid>
</ContentPage>