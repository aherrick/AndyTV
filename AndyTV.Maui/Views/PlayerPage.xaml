<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndyTV.Maui.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vlc="clr-namespace:LibVLCSharp.MAUI;assembly=LibVLCSharp.MAUI"
    xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
    Title="{Binding ChannelName}"
    x:DataType="vm:PlayerViewModel"
    Shell.NavBarIsVisible="False">

    <Grid BackgroundColor="Black">
        <vlc:VideoView
            x:Name="VideoView"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />

        <Button
            Margin="20"
            Command="{Binding GoBackCommand}"
            HorizontalOptions="Start"
            Opacity="0.7"
            Text="Back"
            VerticalOptions="Start" />
    </Grid>
</ContentPage>