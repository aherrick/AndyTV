<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AndyTV.Maui.Views.PlayerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vlc="clr-namespace:LibVLCSharp.MAUI;assembly=LibVLCSharp.MAUI"
    xmlns:vm="clr-namespace:AndyTV.Maui.ViewModels"
    Title="{Binding ChannelName}"
    x:DataType="vm:PlayerViewModel">

    <Grid BackgroundColor="Black">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding GoBackCommand}"
                NumberOfTapsRequired="2" />
        </Grid.GestureRecognizers>

        <vlc:VideoView
            x:Name="VideoView"
            HorizontalOptions="Fill"
            VerticalOptions="Fill" />
    </Grid>
</ContentPage>